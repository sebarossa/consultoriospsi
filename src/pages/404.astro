---
import Button from "@/components/Button.astro";
import Base from "@/layouts/Base.astro";
---

<Base title="Página No Encontrada">
  <section class="relative pt-[260px] pb-[160px] text-center overflow-hidden">
    <div
      class="absolute inset-0 bg-[url(/images/page-header.png)] bg-cover bg-center grayscale-[100%] z-0"
      aria-hidden="true"
    >
    </div>

    <div class="relative z-10 container">
      <div class="row justify-center">
        <div class="sm:col-10 md:col-8 lg:col-6">
          <span class="text-h1 lg:text-[6rem] block font-medium text-white"
            >¡Oops!</span
          >
          <div class="content mb-14">
            <p class="text-white">
              La página que buscás no existe o fue movida. Volvé al inicio para encontrar nuestros consultorios.
            </p>
          </div>
          <Button enable label="Volver al Inicio" link="/" />
        </div>
      </div>
    </div>
  </section>
</Base>